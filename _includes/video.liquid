<figure
  style="width: {{ include.width | default: '80%' }}; margin: 0 auto; text-align: center;"
>
  <div style="position: relative; padding-bottom: {{ include.aspect_ratio | default: '56.25%' }}; height: 0; overflow: hidden; max-width: 100%; background-color: #000; margin: 0 auto;">
    <iframe
      src="{{ include.video_link }}"
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;"
      frameborder="0"
      allowfullscreen
    ></iframe>
  </div>

  {% if include.caption %}
    <figcaption class="caption" style="margin-top: 10px;">{{ include.caption }}</figcaption>
  {% endif %}
</figure>
