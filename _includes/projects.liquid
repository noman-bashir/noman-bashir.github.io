<div class="col">
  {% comment %} <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}"> {% endcomment %}
    <div class="card h-100 hoverable">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      {% if project.link %}
          <div class="embed-container">
            <iframe
                src="https://www.youtube.com/embed/{{ project.link }}"
                width="441"
                height="246"
                frameborder="1"
                allowfullscreen="true">
            </iframe>
          </div>
      {% endif %}
      <div class="card-body">
        <p class="card-title">{{ project.title }}</p>
        <p class="card-text">{{ project.description }}</p>
      </div>
    </div>
  {% comment %} </a> {% endcomment %}
</div>
